<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <div>
    <% if current_user.teacher? %>
      <% @users.each do |user| %>
        <div>
          <h1><%= user.email %></h1> 
          <p><strong>GitHub Profile</strong> | <%= user.gh_name%>
            <p><%= link_to 'Show', user %> | 
            <%= link_to 'Edit', edit_user_registration_path(user) %></p>
            <!--   <td><%# link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </div>
      <% end %>
    <% else %>
     <h1>Students are not authorized to see this page! Please go <%= link_to "Home", root_path %></h1>
     <% end %>
  <div>
</table>

<br>

<%= link_to 'Sign Up', user_registration_path %>
